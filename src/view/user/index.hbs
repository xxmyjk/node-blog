{{!-- <h1>登录注册引导页</h1> --}}
<p style="color: red">{{msg}}</p>

<div class="index-login">
    
    {{!-- 登录 --}}
    <form class="login-form" action="/user/login" method="post">
        <div class="line">
            <label for="username">用户名 </label>
            <input type="text" name="username" placeholder="手机号或邮箱地址" value="">
        </div>

        <div class="line">
            <label for="password">密码 </label>
            <input type="password" name="password" placeholder="密码" value="">
        </div>
        <div class="link">|&nbsp;&nbsp;<a href="/user/register">注册</a>
        </div>
        <button type="submit" name="login">登录</button>
    </form>

    {{!-- 注册 --}}

    <form class="register-form" action="/user/register" method="post">
        <div class="line">
            <label for="nickname">昵称</label>
            <input type="text" name="nickname" value="">
        </div>

        <div class="line">
            <label for="email">邮箱</label>
            <input type="text" name="email" value="">
        </div>

        <div class="line">
            <label for="mobile">手机号</label>
            <input type="text" name="mobile" value="">
        </div>

        <div class="line">
            <label for="password">密码</label>
            <input type="password" name="password" value="">
        </div>

        <div class="line">
            <label for="password-repeat">密码重复</label>
            <input type="password" name="password-repeat" value="">
        </div>

        <div class="link">|&nbsp;&nbsp;<a href="/user/login">登录</a>
        </div>

        <button type="submit" name="register">注册</button>
    </form>
</div>
